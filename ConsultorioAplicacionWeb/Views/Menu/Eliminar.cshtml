@model Entity.Menu

@{
    ViewData["Title"] = "Eliminar Menú";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Eliminar Menú</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            <h3>¿Estás seguro de que quieres eliminar esto?</h3>
            <div>
                <h4>Menú</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Icono)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Icono)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Controlador)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Controlador)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PaginaAccion)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaginaAccion)
                    </dd>
                    <dt class="col-sm-2">
                        Estado
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.EstaActivo == 1 ? "Activo" : "Inactivo")
                    </dd>
                </dl>

                <form asp-action="Eliminar">
                    <input type="hidden" asp-for="Secuencial" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                </form>
            </div>
        </div>
    </div>
</div>
